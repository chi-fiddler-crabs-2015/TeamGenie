<div class="col-lg-12">
  <div class="row">
    <div class="col-lg-12">
      <div class="col-xs-12 col-sm-4">
        <figure>
          <%= image_tag @team.team_logo.url(:medium), class: 'img-rounded img-responsive' %>
        </figure>
      </div>

      <div class="col-xs-12 col-sm-8">
        <ul class="list-group">
          <li class="list-group-item"><strong>Team Name:</strong> <%= @team.name %></li>
          <li class="list-group-item"><strong>Team Captain:</strong> <%= @team.captain.first_name %> <%= @team.captain.last_name %></li>
          <li class="list-group-item"><strong>Roster Size:</strong> <%= @team.memberships.count %> players</li>
          <li class="list-group-item"><strong>Home Location:</strong> <%= @team.home_location.name %></li>
          <li class="list-group-item"><strong>Total Dues:</strong> $<%= @team.dues %></li>
          <li class="list-group-item"><strong>Paid Dues:</strong> $<%= @team.dues - @team.amount_owed  %></li>
          <li class="list-group-item"><strong>Outstanding Dues:</strong> $<%= @team.amount_owed %></li>
        </ul>
      </div>
    </div>
  </div>
<div>
<br /><br />
<div class='table'>

  <table class="table table-striped table-hover btn-group-sm">
    <thead>
        <tr>
            <th></th>
            <th>Player Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Amount Owed</th>
            <th>Mark Paid</th>
        </tr>
    </thead>
    <tbody>
      <% @memberships.each do |membership| %>
        <tr>
            <td><%= button_to 'Remove Player', team_membership_path(@team, membership), method: 'delete', class: 'btn btn-danger btn-sm' %></td>
            <td><%= membership.player.first_name %> <%= membership.player.last_name %></td>
            <td><%= membership.player.email %></td>
            <td><%= membership.player.phone_number %></td>
            <td><%= membership.amount_owed %></td>
            <td><%= button_to 'Mark Paid', team_membership_mark_paid_path(@team, membership), method: 'put', class: 'btn btn-sm btn-success' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
