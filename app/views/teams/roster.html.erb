<div class="col-lg-12">
    <div class="row">
      <div class="col-lg-12">
        <div class="col-xs-12 col-sm-4">
          <figure>
            <%= image_tag @team.team_logo.url(:medium), class: 'img-circle img-responsive' %>
          </figure>
        </div>

        <div class="col-xs-12 col-sm-8 vcenter">
          <ul class="list-group">
            <li class="list-group-item"><strong>Team Name:</strong> <%= @team.name %></li>
            <li class="list-group-item"><strong>Team Captain:</strong> <%= @team.captain.first_name %> <%= @team.captain.last_name %></li>
            <li class="list-group-item">Google Inc. </li>
            <li class="list-group-item"><i class="fa fa-phone"></i> 000-000-0000 </li>
            <li class="list-group-item"><i class="fa fa-envelope"></i> john@example.com</li>
          </ul>
        </div>
      </div>
    </div>
    </div>

    <%= @team.amount_owed %>
<div>

<div class='table'>

  <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Player Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Birthday</th>
            <th>Amount Owed</th>
            <th>Mark Paid</th>
        </tr>
    </thead>
    <tbody>
      <% @memberships.each do |membership| %>
        <tr>
            <td><%= membership.player.first_name %> <%= membership.player.last_name %></td>
            <td><%= membership.player.email %></td>
            <td><%= membership.player.phone_number %></td>
            <td><%= membership.player.birthday %></td>
            <td><%= membership.amount_owed %></td>
            <td><%= button_to 'Mark Paid', team_membership_mark_paid_path(@team, membership), method: 'put', class: 'btn btn-success' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
