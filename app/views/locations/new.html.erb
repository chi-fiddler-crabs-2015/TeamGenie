<h2>Add a new playing location</h2>

<%= form_for :location, url: locations_path, role: 'form'  do |f| %>
  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :city %><br />
    <%= f.text_field :city, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :state %><br />
    <%= f.select :state, us_states, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :directions, "Special Instructions" %><br />
    <%= f.text_area :directions, autofocus: true, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-success' %>
  </div>
<% end %>
