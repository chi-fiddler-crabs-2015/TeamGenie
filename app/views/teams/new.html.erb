<h2>Add new team</h2>

<%= form_for :team, url: teams_path, html: { multipart: true }  do |f| %>
  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :activity %><br />
    <%= f.text_field :activity, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :team_logo %><br />
    <%= f.file_field :team_logo %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
