<h2>Edit Home Location</h2>

<%= form_for :team, url: team_path(@team), method: 'put'  do |f| %>
  <div class="form-group">
    <%= f.label :home_location %><br />
    <%= f.select :home_location, location_names(params[:id]), class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: 'btn btn-success' %>
  </div>
<% end %>
