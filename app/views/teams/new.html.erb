<h2>Add new team</h2>

<%= form_for :team, url: teams_path, html: { multipart: true }  do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true , class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :activity %>
    <%= f.text_field :activity, autofocus: true , class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :home_location %><br />
    <%= f.select :home_location, location_names(1), class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :team_logo %>
    <%= f.file_field :team_logo, class: 'form-control'%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-success' %>
  </div>
<% end %>
