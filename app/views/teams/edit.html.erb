<h2>Edit Team Picture</h2>

<%= form_for :team, url: team_path(@team), method: 'put', html: { multipart: true }  do |f| %>
  <div class="form-group">
    <%= f.label :team_logo %><br />
    <%= f.file_field :team_logo, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: 'btn btn-success' %>
  </div>
<% end %>
