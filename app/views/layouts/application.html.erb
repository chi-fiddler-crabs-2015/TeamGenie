<!DOCTYPE html>
<html>
<head>
  <title>TeamGenie</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <!-- Get this to render as a partial.  Currently in layouts/_navigation -->
  <nav class="navbar navbar-default" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">Team Genie</a>
      </div>

      <!-- Shove these to the right -->
      <div class="pull-right">
        <ul class="nav navbar-nav">
          <% if current_user %>
            <li><%= link_to 'My Teams', teams_path, class: 'btn' %></li>
            <li><%= button_to 'Log Out', logout_path, class: 'btn-default' %></li>
          <% else %>
            <li><%= link_to 'Log In', login_path %></li>
            <li><%= link_to 'Sign Up', new_user_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>


<div class='container'>
<%= yield %>

</div>
</body>
</html>
