
<div class="col-xs-12">
  <h2>Log in</h2>

  <% if flash[:notice] %>
    <div class="alert alert-warning" role="alert">
      <span><%= flash[:notice] %></span>
    </div>
  <% end %>



  <%= form_for :user, url: login_path, role: 'form' do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: 'btn-success btn' %>
    </div>
  <% end %>
</div>
